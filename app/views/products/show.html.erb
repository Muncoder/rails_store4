<div class="container">
	
	<div class="well">
		<%= image_tag @product.image.url(:medium) %>
		<hr>
		<h1><%= @product.name %></h1>
		<hr>
		<%= @product.description %>
		<hr>
		<p>Price : <h2><%= @product.price %></h2></p>
		<hr>
		
		<%= link_to "Add to cart", add_carts_path(@product), method: :post, class: "btn btn-success"  %>	
	</div>

	<%= link_to "All Products", products_path, class: "btn btn-success" %>
</div>