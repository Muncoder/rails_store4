<div class="container">
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<table class="table table-bordered table-stripe">
				<thead>
					<tr>
						<th>Id</th>
						<th>Name</th>
						<th>Image</th>
						<th>Quantity</th>
						<th>Price</th>
						<th>Total Price</th>
					</tr>
				</thead>
				<tbody>
					<% @cart.items.each do |cart| %>
						<tr>
							<td><%= cart.product.id %></td>
							<td><%= cart.product.name %></td>
							<td><%= image_tag cart.product.image.url(:thumb) %></td>

							<td> <%= link_to ">", add_quantity_carts_path(cart.product.id), method: :post, class: "btn btn-info" %> |   <%= cart.quantity %> | <%= link_to "<", remove_quantity_carts_path(cart.product.id), method: :post, class: "btn btn-info" %> </td>

							<td><%= cart.quantity %></td>
							<td><%= cart.product.price %></td>
							<td><%= cart.total_price %></td>
							<td><%= link_to "Delete", del_carts_path(cart.product.id), method: :delete, data: {confirm: "Sure to Delete?"}, class: "btn btn-danger btn-xs" %></td>
						</tr>
					<% end %>

					<tr>
						<td colspan="5">Total Price</td>
						<td><%= @cart.total_price %></td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>
